<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= locals.listTitle %> </h1>
  </div>

  <div class="box" id="formBox">
    <% if(locals.newListItems) { %>  
    <% newListItems.forEach(element => { %>
      <form  action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%= element._id %>" onChange="this.form.submit()">
          <p><%=  element.name  %></p>
        </div>
        <input type="hidden" name="listName" value="<%= listTitle %>">
      </form>
    <% }); %>
    <% } else { %>
      <div class="noTask">
        <h2> No task today? </h2>
        <h3>Organize your task...</h3>
      </div>
      <% } %>

    <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="Add New Item" autocomplete="off" required title="Empty item!">
      <button type="submit" name="list" value="<%= locals.listTitle %>">+</button>
    </form>
  </div>

<%- include("footer") -%>
